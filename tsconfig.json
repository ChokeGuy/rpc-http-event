{
  "compilerOptions": {
    "baseUrl": "/",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["/shared/*"],
      "@config/*": ["./config/*"],
      "@api/*": ["./api/*"],
      "@domain/*": ["./domain/*"]
    }
  }
}
